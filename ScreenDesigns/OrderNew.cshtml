@{
    Page.Title = "New Order";
    Layout = "~/_FormLayout.cshtml";
}

<div class="page-header">
    <h1>New Order</h1>
</div>

<div class="col-md-6 well bs-component">
    <form class="form-horizontal">
        <fieldset>
            <legend>New Order</legend>

            <div class="form-group">
                <label class="col-lg-3 control-label">Customer</label>
                <div class="col-lg-9">
                    <input type="text" class="form-control" placeholder="Name" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Description</label>
                <div class="col-lg-9">
                    <input type="text" class="form-control" placeholder="Description" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Due Date</label>
                <div class="col-lg-9">
                    <input type="date" class="form-control" placeholder="Due Date" />
                </div>
            </div>

            <div class="form-group">
            <div class="col-lg-10 col-lg-offset-3">
                <a href="~/OrderShow" class="btn btn-primary">Save</a>
                <a href="~/OrderIndex" class="btn btn-default">Cancel</a>
            </div>
        </div>


        </fieldset>
    </form>
    
</div>