@{
    Page.Title = "Garment Costing";
    Layout = "~/_FormLayout.cshtml";
}

<div class="page-header">
    <h1>Garment Costing</h1>
</div>
<div class="col-md-12">
    <div class="col-md-3">
        <p><strong>Garment Description:</strong>"Some text"</p>
        <p><strong>Due Date:</strong> ##/##/####</p>
        <p><strong>Customer:</strong> "Some Text"</p>
    </div>
</div>
<div class="col-lg-6 well bs-component">
    <form class="form-horizontal">
        <fieldset>
            <legend>Costing</legend>

            <div class="form-group">@*Lab*@
                <label for="inputLab" class="col-lg-3 control-label">Labour</label>
                <div class="col-lg-9 input-group">
                    <span class="input-group-addon">R</span>
                    <input type="number" class="form-control" id="inputLab" />
                </div>
            </div>

            <div class="form-group">@*Fab*@
                <label for="inputFab" class="col-lg-3 control-label">Fabric</label>
                <div class="col-lg-9 input-group">
                    <span class="input-group-addon">R</span>
                    <input type="number" class="form-control" id="inputFab" />
                </div>
            </div>

            <div class="form-group">@*Acc*@
                <label for="inputAcc" class="col-lg-3 control-label">Accessories</label>
                <div class="col-lg-9 input-group">
                    <span class="input-group-addon">R</span>
                    <input type="number" class="form-control" id="inputAcc" />
                </div>
            </div>

            <div class="form-group">@*Misc*@
                <label for="inputMisc" class="col-lg-3 control-label">Misc</label>
                <div class="col-lg-9 input-group">
                    <span class="input-group-addon">R</span>
                    <input type="number" class="form-control" id="inputMisc" />
                </div>
            </div>@*Misc*@

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-3">
                    <a href="~/OrderShow" class="btn btn-primary">Save</a>
                    <a href="~/OrderShow" class="btn btn-default">Cancel</a>
                </div>
            </div>

        </fieldset>

    </form>
</div>