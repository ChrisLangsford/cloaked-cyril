@{
    Page.Title = "Create Appointment";
    Layout = "~/_FormLayout.cshtml";
}

<div class="page-header">
    <h1>Create Appointment</h1>
</div>
<div class="col-lg-6 well bs-component">
<form class="form-horizontal">
    <fieldset>
        <legend>Make an Appointment</legend>
    <div class="form-group">
      <label for="inputCustomer" class="col-lg-2 control-label">Customer</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputCustomer" placeholder="Name">
      </div>
    </div>

    <div class="form-group">
      <label for="inputComments" class="col-lg-2 control-label">Comments</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputComments" placeholder="Comments">        
      </div>
    </div>
    
    <div class="form-group">
      <label for="inputDate" class="col-lg-2 control-label">Date</label>
      <div class="col-lg-10">
        <input type="date" class="form-control" id="inputDate" />        
      </div>
    </div>

    <div class="form-group">
      <label for="inputTime" class="col-lg-2 control-label">Time</label>
      <div class="col-lg-10">
        <input type="time" class="form-control" id="inputTime" /> 
          <div class="checkbox">
            <label for="chkFollowUp"><input type="checkbox" />Follow up</label>
          </div>       
      </div>
    </div>
         
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <a href="~/AppointmentIndex" class="btn btn-primary">Save</a>
        <a href="~/AppointmentIndex" class="btn btn-default">Cancel</a>        
      </div>
    </div>
        
    </fieldset>
</form>
</div>