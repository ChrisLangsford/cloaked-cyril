 <script type="text/javascript">
            var chart;
            var chartData = <%= raw @expense.to_json.gsub(/\"habby\"/, "habby").gsub(/\"bank\"/, "bank").gsub(/\"equip\"/, "equip").gsub(/\"stat\"/, "stat").gsub(/\"comp\"/, "comp").gsub(/\"tel\"/, "tel").gsub(/\"misc\"/, "misc") %>;             

            AmCharts.ready(function () {
                // SERIAL CHART
                chart = new AmCharts.AmSerialChart();
                chart.dataProvider = chartData;
                chart.categoryField = "period_end_date";
                chart.plotAreaBorderAlpha = 0.2;
                chart.depth3D = 10;
                chart.angle = 30;
                chart.columnWidth = 0.35;
                chart.startDuration = 1;
                chart.startEffect = "elastic";


                // AXES
                // category
                var categoryAxis = chart.categoryAxis;
                categoryAxis.gridAlpha = 0.1;
                categoryAxis.axisAlpha = 0;
                categoryAxis.gridPosition = "start";

                // value
                var valueAxis = new AmCharts.ValueAxis();
                valueAxis.stackType = "regular";
                valueAxis.gridAlpha = 0.1;
                valueAxis.axisAlpha = 0;
                valueAxis.totalText = "R [[total]]";
                chart.addValueAxis(valueAxis);

                // GRAPHS
                // first graph    
                var graph = new AmCharts.AmGraph();
                graph.title = "Habby";
                graph.labelText = "R [[value]]";
                graph.valueField = "habby";
                graph.type = "column";
                graph.lineAlpha = 0;
                graph.fillAlphas = 1;
                graph.lineColor = "#C72C95";
                graph.balloonText = "<span style='color:#555555;'>[[category]]</span><br><span style='font-size:14px'>[[title]]:<b>R [[value]]</b></span>";
                chart.addGraph(graph);

                // second graph              
                graph = new AmCharts.AmGraph();
                graph.title = "Bank Charges";
                graph.labelText = "R [[value]]";
                graph.valueField = "bank";
                graph.type = "column";
                graph.lineAlpha = 0;
                graph.fillAlphas = 1;
                graph.lineColor = "#D8E0BD";
                graph.balloonText = "<span style='color:#555555;'>[[category]]</span><br><span style='font-size:14px'>[[title]]:<b>R [[value]]</b></span>";
                chart.addGraph(graph);                

                // third graph                              
                graph = new AmCharts.AmGraph();
                graph.title = "Equipment";
                graph.labelText = "R [[value]]";
                graph.valueField = "equip";
                graph.type = "column";
                graph.lineAlpha = 0;
                graph.fillAlphas = 1;
                graph.lineColor = "#B3DBD4";
                graph.balloonText = "<span style='color:#555555;'>[[category]]</span><br><span style='font-size:14px'>[[title]]:<b>R [[value]]</b></span>";
                chart.addGraph(graph);

                // fourth graph  
                graph = new AmCharts.AmGraph();
                graph.title = "Stationery";
                graph.labelText = "R [[value]]";
                graph.valueField = "stat";
                graph.type = "column";
                graph.lineAlpha = 0;
                graph.fillAlphas = 1;
                graph.lineColor = "#69A55C";
                graph.balloonText = "<span style='color:#555555;'>[[category]]</span><br><span style='font-size:14px'>[[title]]:<b>R [[value]]</b></span>";
                chart.addGraph(graph);

                // fifth graph
                graph = new AmCharts.AmGraph();
                graph.title = "Computers";
                graph.labelText = "R [[value]]";
                graph.valueField = "comp";
                graph.type = "column";
                graph.lineAlpha = 0;
                graph.fillAlphas = 1;
                graph.lineColor = "#B5B8D3";
                graph.balloonText = "<span style='color:#555555;'>[[category]]</span><br><span style='font-size:14px'>[[title]]:<b>R [[value]]</b></span>";
                chart.addGraph(graph);

                // sixth graph   
                graph = new AmCharts.AmGraph();
                graph.title = "Telephone";
                graph.labelText = "R [[value]]";
                graph.valueField = "tel";
                graph.type = "column";
                graph.lineAlpha = 0;
                graph.fillAlphas = 1;
                graph.lineColor = "#F4E23B";
                graph.balloonText = "<span style='color:#555555;'>[[category]]</span><br><span class='font-size:14px'>[[title]]:<b>R [[value]]</b></span>";
                chart.addGraph(graph);

                // sixth graph   
                graph = new AmCharts.AmGraph();
                graph.title = "Misc";
                graph.labelText = "R [[value]]";
                graph.valueField = "misc";
                graph.type = "column";
                graph.lineAlpha = 0;
                graph.fillAlphas = 1;
                graph.lineColor = "#FF5400";
                graph.balloonText = "<span style='color:#555555;'>[[category]]</span><br><span class='font-size:14px'>[[title]]:<b>R [[value]]</b></span>";
                chart.addGraph(graph);

                // LEGEND                  
                var legend = new AmCharts.AmLegend();
                legend.borderAlpha = 0.2;
                legend.horizontalGap = 10;
                legend.autoMargins = false;
                chart.addLegend(legend);                

                // WRITE
                chart.write("chartdiv");
            });

            // this method sets chart 2D/3D
            function setDepth() {
                if (document.getElementById("rb1").checked) {
                    chart.depth3D = 0;
                    chart.angle = 0;
                } else {
                    chart.depth3D = 25;
                    chart.angle = 30;
                }
                chart.validateNow();
            }            			
</script>
<div id="chartdiv" style="width: 100%; height: 400px; background-color: #FFFFFF;" ></div>
