<div class="page-header">
    <h1>Appointments</h1>
    <h5>Monday 28/04/2014</h5>
</div>
<div id= "notice" class="alert alert-success">
    <%= notice%>
</div>
<div>
    <%= link_to 'New Appointment', new_appointment_path, :class => "btn btn-success" %>
</div>
<br>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="col-md-1">Date</th>
                <th class="col-md-1">Time</th>
                <th>Customer</th>
                <th>Description</th>
                <th class="col-md-2">Options</th>
            </tr>
        </thead>
        <tbody>
            <% @appointments.each do |appointment| %>
              <tr>
                <td><%= appointment.date %></td>
                <td><%= appointment.time %></td>

                <td><%= appointment.customer %></td>
                <td><%= appointment.comments %></td>
                <td><%= link_to 'Edit', edit_appointment_path(appointment), :class => "btn btn-xs btn-warning" %>
                <%= link_to 'Delete', appointment, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger" %></td>
              </tr>
            <% end %>            
        </tbody>
    </table>
    <br>
</div>


