
<div class="page-header">
    <h1>Orders</h1>
</div>

<%if notice != nil%>
<div id="notice" class="alert alert-success">
    <%=notice%>
</div>
<% end%>

<div>
    <%= link_to 'New Order', new_order_path, :class =>"btn btn-success" %>
</div>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-md-3">DueDate</th>
                <th>Order Description</th>
                <th>Customer</th>
                <th class="col-md-1"></th>
            </tr>
        </thead>
        <tbody>        

          <% @orders.each do |order| %>
          <% person = Customer.find(order.customer_id)%>          
            <tr class="link-row" onclick="location.href='<%=order_path(order)%>'" style="height:39px;">
              <td><%= order.due_date.strftime("%d-%b-%Y (%A)") %></td> 
              <td><%= order.order_description %></td>
              <td><%= person.first_name + " "+ person.last_name %></td>
              <td>
              <p class="btn btn-xs btn-default disabled show-tag"> Show </p>
              </td>
            </tr>
          <% end %>          
        </tbody>        
    </table>
</div>  