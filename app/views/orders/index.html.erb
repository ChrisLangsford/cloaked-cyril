
<div class="page-header">
    <h1>Orders</h1>
</div>

<div id="notice" class="alert alert-success">
    <%=notice%>
</div>

<div>
    <%= link_to 'New Order', new_order_path, :class =>"btn btn-success" %>
</div>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Order Description</th>
                <th class="col-md-3">DueDate</th>
                <th class="col-md-1"></th>
            </tr>
        </thead>
        <tbody>        

          <% @orders.each do |order| %>
          <% person = Customer.find(order.customer_id)%>          
            <tr class="order-row" onclick="location.href='<%=order_path(order)%>'">
              <td><%= person.first_name + " "+ person.last_name %></td>
              <td><%= order.order_description %></td>
              <td><%= order.due_date %></td> 
              <td>
              <p class="show-tag btn btn-xs btn-default disabled" style="display:none"> Show </p>
              </td>
            </tr>
          <% end %>          
        </tbody>        
    </table>
</div>
<script type="text/javascript">
  jQuery(document).ready(function(){
    jQuery('.order-row').hover(function(){
      jQuery('.show-tag').toggle();
    });
  });
</script>


  