<%= form_for @customer, :html => {:class => 'form-horizontal'} do |f|%>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, :class => "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :first_name%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact_no, :class => "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :contact_no %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => "col-lg-3 control-label" %>
    <div class = "col-lg-9" >
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="form-group">
    <div class = "col-lg-10 col-lg-offset-3">      
      <%= f.submit 'Save', :class => "btn btn-primary"%>
      <%= link_to 'Cancel', customers_path, :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
