<%= form_for @expense, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @expense.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% @expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :period_end_date, :class =>"col-lg-4 control-label" %>
        <div class = "col-lg-8">
           <%= f.select :period_end_date, ["2014 Feb"," 2014 Aug"],
           {:with_css_classes => true, :use_short_month => true, :discard_day => true, :start_year => Date.today.year},
           {:class => "form-control"} %>
        </div>
      </div>  

  <div class="form-group">
    <%= f.label :habby, :class =>"col-lg-4 control-label" %>
    <div class="input-group col-lg-6">
      <span class="input-group-addon">R</span>
      <%= f.text_field :habby, :class => "form-control", :value => 0 %>      
    </div>
  </div>

  <div class="form-group">
    <%= f.label :bank_charge, :class =>"col-lg-4 control-label" %>
    <div class = "input-group col-lg-6">
      <span class="input-group-addon">R</span>
      <%= f.text_field :bank_charge, :class => "form-control", :value => 0 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :equipment, :class =>"col-lg-4 control-label" %>
    <div class = "input-group col-lg-6">
      <span class="input-group-addon">R</span>
      <%= f.text_field :equipment, :class => "form-control", :value => 0 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :stationery, :class =>"col-lg-4 control-label" %>
    <div class = "input-group col-lg-6">
      <span class="input-group-addon">R</span>
      <%= f.text_field :stationery, :class => "form-control", :value => 0 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :computer, :class =>"col-lg-4 control-label" %>
    <div class = "input-group col-lg-6">
      <span class="input-group-addon">R</span>
      <%= f.text_field :computer, :class => "form-control", :value => 0 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :telephone, :class =>"col-lg-4 control-label" %>
    <div class = "input-group col-lg-6">
      <span class="input-group-addon">R</span>
      <%= f.text_field :telephone, :class => "form-control", :value => 0 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :misc_expense, :class =>"col-lg-4 control-label" %>
    <div class = "input-group col-lg-6">
      <span class="input-group-addon">R</span>
      <%= f.text_field :misc_expense, :class => "form-control", :value => 0 %>
    </div>
  </div>


  <div class="form-group">
    <div class = "col-lg-10 col-lg-offset-4">      
      <%= f.submit 'Save', :class => "btn btn-primary"%>
      <%= link_to 'Cancel', expenses_path, :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
